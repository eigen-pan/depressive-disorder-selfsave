extends layouts/login-layout.pug

block content
    .loginContainer
        h1 Register
        p #{errorMessage}
        form#registerForm(method="post" onsubmit="event.preventDefault(); validateForm()")
            input(type="text", name="firstName", placeholder="FirstName", value="jingyu" required="")
            input(type="text", name="lastName", placeholder="LastName", value="pang" required="")
            input(type="text", name="username", placeholder="Username", value="Bruce" required="")
            input(type="email", name="email", placeholder="email", value="jingyu.pang@tufts.edu" required="")
            input#password(type="password", name="password", placeholder="Password", value="password" required="")
            input#conPassword(type="password", name="ConfirmPassword", placeholder="ConfirmPassword", value="password" required="")
            input(type="submit", value="submit")
        a(href="/login") already have an account? login here.
    script.
        var passwordField = document.getElementById("password")
        var passwordConf = document.getElementById("conPassword")
        var form = document.getElementById("registerForm")

        function validateForm() {
            if (passwordField.value === passwordConf.value) {
                form.submit();
            }else{
                alert("the password isn't match");
            }
        }